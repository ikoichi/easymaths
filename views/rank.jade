!!! transitional
html
	head
		link(rel="stylesheet",href="stylesheets/style.css")
		script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js")
	body
		div.toolbar
			span
				a(href="/user/#{user}") Let me count again
				span &nbsp;&nbsp;-&nbsp;
				a(href="/user/#{user}/stats") Your results
				span &nbsp;&nbsp;-&nbsp;
				a(href="/logout") Logout

		div.center
			h3 Rank
			ul.rank
				each item, i in rank
					li ##{i+1}
						&nbsp;
						a(href="http://www.twitter.com/#{item.user}",target="_blank") @#{item.user}
						div.right
							div.ball.small.good
								div.val #{item.success}
							div.ball.small.bad
								div.val #{item.failed}
							div.ball.small.time
								div.val #{item.average_time}
